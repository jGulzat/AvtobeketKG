<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="#fff"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_rv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/fromToTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:text="From to"
            android:textColor="@color/colorPrimary">

        </TextView>

        <TextView
            android:id="@+id/fullnameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromToTV"
            android:layout_alignStart="@+id/fromToTV"
            android:layout_alignLeft="@+id/fromToTV"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Fullname"
            android:textColor="@color/colorPrimary">

        </TextView>

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullnameTV"
            android:layout_alignStart="@+id/fullnameTV"
            android:layout_alignLeft="@+id/fullnameTV"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Date"
            android:textColor="@color/colorPrimary">

        </TextView>

        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fromToTV"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24dp"
            android:text="username" />


        <TextView
            android:id="@+id/priceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dateTV"
            android:layout_alignBottom="@id/dateTV"
            android:layout_marginStart="8dp"
            android:text="TextView" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:tint="@color/colorAccent"
            android:src="@drawable/bus"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>