<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.VokzalInfoActivity">
     <include layout="@layout/toolbar"/>
    <ImageView
        android:id="@+id/vokzalIV"
        android:src="@drawable/vokzalb"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/vokzalNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Naryn hfbkvfhv"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/vokzalIV"
        />
    <TextView
        android:id="@+id/vokzalInfoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="bcfhbchf"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/vokzalNameTV"
        />
    <TextView
        android:id="@+id/phoneNumberTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/vokzalInfoTV"
        android:text="+996708542564"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toStartOf="@id/callBtn"
        />
    <Button
        android:id="@+id/callBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/phone"
        android:layout_margin="24dp"
        android:onClick="call"
        app:layout_constraintTop_toBottomOf="@id/vokzalInfoTV"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>