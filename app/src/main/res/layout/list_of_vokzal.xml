<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp">
        <ImageView
            android:id="@+id/image_vokzal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_avtobeket"
            />
        <TextView
            android:id="@+id/name_vokzal"
            android:layout_toRightOf="@id/image_vokzal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нарын облустук автобекети"
            android:layout_marginStart="24dp"
            android:textStyle="normal"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            />
         <TextView
             android:id="@+id/phone_vokzal"
             android:layout_alignLeft="@id/name_vokzal"
             android:layout_below="@id/name_vokzal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Нарын шаары"
             android:layout_marginTop="8dp"
             android:textStyle="normal"
             android:textSize="16sp"
             android:textColor="@color/colorPrimary"
             />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>