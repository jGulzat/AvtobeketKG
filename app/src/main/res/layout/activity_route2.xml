<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Route2Activity">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:id="@+id/quantityRV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#f3f3f3"
        >
        <TextView
            android:id="@+id/quantity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Количество пассажиров"
            android:textColor="#a7a7aa"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/plusBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/plus"
            android:backgroundTint="@color/colorAccent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:onClick="plusBtnClick"
            />
        <TextView
            android:id="@+id/quantityTV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/plusBtn"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:text="0"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="@color/colorPrimary"
            />
        <Button
            android:id="@+id/minusBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/minus"
            android:backgroundTint="@color/colorAccent"
            android:layout_toLeftOf="@id/quantityTV"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:onClick="minusBtn"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/route2RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/quantityRV"
        app:layout_constraintBottom_toTopOf="@id/route2Pay"

        />
    <Button
        android:id="@+id/route2Pay"
        android:layout_width="140dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/round_button"
        android:text="Купить"
        android:gravity="center"
        android:textColor="@color/white"
        android:onClick="route2BuyBtn"
        app:layout_constraintTop_toBottomOf="@id/route2RecyclerView"
        />
    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/route2RecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/round_button"
        android:layout_margin="24dp"
        android:text="Бронировать"
        android:textColor="@color/white"
        android:onClick="route2BookBtn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>