<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/passengerId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Passenger 1"
            android:textColor="#000"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            />
        <EditText
            android:id="@+id/passengerEmail"
            android:layout_below="@id/passengerId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:hint="email"
            android:textColorHint="#a7a7aa"
            android:background="@drawable/round_edittext"
            />
        <EditText
            android:id="@+id/passengerFullname"
            android:layout_below="@id/passengerEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:hint="Имя и фамилия"
            android:textColorHint="#a7a7aa"
            android:background="@drawable/round_edittext"
            />

        <TextView
            android:id="@+id/passengerCardNumber"
            android:layout_below="@id/passengerFullname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="32dp"
            android:padding="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:hint="Номер сидение:"
            android:textColorHint="#a7a7aa"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:background="@drawable/round_edittext"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>